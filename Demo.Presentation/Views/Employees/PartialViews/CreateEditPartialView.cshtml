@model EmployeeViewModel
@inject IDepartmentService _departmentService
@{

    //_departmentService.GetAllDepartments();
    var Departments = new SelectList(_departmentService.GetAllDepartments(), nameof(DepartmentDto.id) , nameof(DepartmentDto.Name));
}


<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="Name"></label>
    <input asp-for="Name" class="form-control" />
    <span asp-validation-for="Name" class="text-danger"></span>
</div>

@if (Model is not null && !string.IsNullOrEmpty(Model.ImageName))
{
    <div class="form-group mb-3 col-6">
        <label class="form-label">Current Image</label>
        <div class="position-relative d-inline-block" style="width: 150px; height: 150px;">
            <img src="~/Files/Images/@Model.ImageName"
            alt="Profile Picture"
            class="img-thumbnail rounded-circle shadow"
            style="width: 100%; height: 100%; object-fit: cover;" />
        </div>
    </div>
}
else
{
    <div class="form-group mb-3 col-6">
        <label class="form-label">Current Image</label>
        <div class="position-relative d-inline-block" style="width: 150px; height: 150px;">
            <img src="~/Files/Images/user.png"
                 alt="Default Profile"
                 class="img-thumbnail rounded-circle shadow"
                 style="width: 100%; height: 100%; object-fit: cover;" />
        </div>
    </div>

}



<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="Image">Upload New Image (Optional)</label>
    <input asp-for="Image" class="form-control" />
    <span asp-validation-for="Image" class="text-danger"></span>
</div>






<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="Email"></label>
    <input asp-for="Email" class="form-control" />
    <span asp-validation-for="Email" class="text-danger"></span>
</div>
<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="Address"></label>
    <input asp-for="Address" class="form-control" />
    <span asp-validation-for="Address" class="text-danger"></span>
</div>
<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="PhoneNumber"></label>
    <input asp-for="PhoneNumber" class="form-control" />
    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
</div>
<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="Age"></label>
    <input asp-for="Age" class="form-control" />
    <span asp-validation-for="Age" class="text-danger"></span>
</div>
<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="HiringDate"></label>
    <input type="date" asp-for="HiringDate" class="form-control" />
    <span asp-validation-for="HiringDate" class="text-danger"></span>
</div>
<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="Salary"></label>
    <input asp-for="Salary" class="form-control" />
    <span asp-validation-for="Salary" class="text-danger"></span>
</div>

<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="DepartmentId"></label>
    <select asp-for="DepartmentId" asp-items="Departments" class="form-control">
        <option value="">Select Department</option>
    </select>
</div>

<div class="form-group mb-3 col-6">
    <input asp-for="IsActive" class="form-check-input" />
    <label class="col-form-label" asp-for="IsActive"></label>
</div>
<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="EmployeeType"></label>
    <select asp-for="EmployeeType" asp-items="Html.GetEnumSelectList<EmployeeType>()" class="form-control">
        <option value="">Select Employee Type</option>
    </select>
</div>
<div class="form-group mb-3 col-6">
    <label class="form-label" asp-for="Gender" ></label>
    <div>
        @foreach (var GenderOption in Enum.GetValues<Gender>())
        {
            <div>
                <input type="radio" asp-for="Gender" value="@GenderOption">@*</input>*@
                <label>@GenderOption</label>

            </div>
        }


    </div>
</div>