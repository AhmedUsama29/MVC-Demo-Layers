@model IEnumerable<GetRolesDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>All Roles</h1>
<br />
<br />
<a class="btn btn-success" asp-controller="Roles" asp-action="Create">Add New Role</a>

<div class="m-2">
    <form asp-action="index" class="row offset-2" method="get">
        <div class="col-8">
            <input class="form-control" type="text" name="RoleSearchName"
                   placeholder="Search Role By Name" />
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-outline-success" value="Search" />
        </div>
    </form>

</div>

<br />
@if (Model.Any())
{
    <table class="table table-striped table-hover mt-3">
        <thead class="text-center">
            <tr>
                <th>@Html.DisplayNameFor(e => e.Id)</th>
                <th>@Html.DisplayNameFor(e => e.Name)</th>
                <th>Details </th>
                <th>Update</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody class="text-center">
            @foreach (var Role in Model)
            {
                <tr>

                    <td>@Role.Id</td>
                    <td>@Role.Name</td>

                    <td><a class="btn btn-primary" asp-action="Details" asp-route-id="@Role.Id"><i class="fas fa-eye"></i> Details</a></td>

                    <td><a class="btn btn-warning" asp-action="Update" asp-route-id="@Role.Id"><i class="fas fa-edit"></i> Update</a></td>

                    <td>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Role.Id">
                            <i class="fas fa-trash"></i> Delete
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div class="alert alert-info mt-3">
        <h2>No Roles Found !!</h2>
    </div>
}


