@model EditUsersForRolesViewModel

<h2>Edit User Roles for: @Model.RoleName</h2>

<form method="post" asp-route-id="@Model.RoleId">
    <div class="form-group">
        @foreach (var user in Model.AllUsers)
        {
            <div class="form-check">
                <input type="checkbox"
                       name="RoleUsers"
                       value="@user.Id"
                       class="form-check-input"
                       checked="@(Model.RoleUsers.Contains(user.Id))" />
                <label class="form-check-label">@user.Email - @user.FirstName @user.LastName</label>
            </div>
        }
    </div>
    <div class="mt-4">
        <button type="submit" class="btn btn-primary">
            <i class="fas fa-save"></i> Save Changes
        </button>
        <a asp-action="Update" asp-route-id="@Model.RoleId" class="btn btn-outline-secondary ms-2">
            <i class="fas fa-arrow-left"></i> Back to Update
        </a>
    </div>
</form>
